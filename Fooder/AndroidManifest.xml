            android:name=".EditFavoritesActivity"
            android:label="@string/title_activity_edit_favorites" >
        </activity>
        <activity
            android:name=".LocalSettingsActivity"
            android:label="@string/title_activity_local_settings" >
        </activity>
        <activity
            android:name=".DisplayActivity"
            android:label="@string/title_activity_display" >
        </activity>
        <activity
            android:name=".Shuffle"
            android:label="@string/title_activity_shuffle" >
        </activity>
        <activity
            android:name=".ShuffleActivity"
            android:label="@string/title_activity_shuffle" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
